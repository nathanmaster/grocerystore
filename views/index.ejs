<!DOCTYPE html>
<html>
    <head>
        <title> Grocery Store</title>
    </head>
    <body>
        <h1>Grocery Store</h1>

        <ul>
            <% products.forEach(product => { %>
                <li>
                    <a href="/product/<%= product.id %>"><%= product.name %>: $<%= product.price %>  -  <%= product.weight%>lb</a>
                    <form action="/product/delete/<%= product.id %>" method="POST" style="display:inline;">
                        <button type=""submit">Delete</button>
                    </form>
                </li>

            <% }) %>
        </ul>
        <h2>Add product</h2>
        <form action="/product/add" method="POST">
            <input type="text" name="name" placeholder="Name" required>
            <input type="number" step="0.01" name="price" placeholder="Price" required>
            <input type="number" step="0.01" name="weight" placeholder="Weight (lbs)" required>
            <button type="submit">Add</button>
        </form>
    </body>
</html>